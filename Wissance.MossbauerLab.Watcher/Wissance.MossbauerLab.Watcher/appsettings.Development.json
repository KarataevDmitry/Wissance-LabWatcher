{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft": "Debug",
      "Microsoft.Hosting.Lifetime": "Debug",
      "Quartz.Core.QuartzScheduler":  "Debug" 
    }
  },
  "Serilog": {
    "MinimumLevel": "Debug",
    "Using": [ "Serilog.Sinks.RollingFile" ],
    "WriteTo": [
      {
        "Name": "RollingFile",
        "Args": { "pathFormat": "logs/log-{Date}.txt" }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "Wissance.MossbauerLab.Watcher.Web",
      "Environment": "Development"
    }
  },
  "Kestrel": {
    "EndPoints": {
      "Http": {
        "Url": "http://localhost:7890"
      }
    }
  },

  "Application": {
    "Sm2201SpectraStoreSettings": {
      "Address": "192.168.10.216",
      "Domain": "",
      "Folder": "autosaves",
      "UserCredentials": null
    },
    "NotificationSettings": {
      "MailSettings": {
        "Host": "127.0.0.1",
        "Port": 25,
        "SenderEmail": "aaa@bbb.cc",
        "RecipientsEMails": [ "rec1@gmail.com", "rec2@gmail.com", "rec3@mail.ru" ]
      },
      "Threshold": 2 
    },
    "DefaultJobsSettings": {
      "DefaultEventWatchSchedule": "",
      "DefaultSpectraIndexerSchedule": "30/30 * * ? * * *",
      "DefaultSpectraNotifySchedule": "0 0 10,17,22 ? * * *"
    },
    "ConnStr": "Data Source=Wissance.MossbauerLab.Watcher.db;"
  } 
}
